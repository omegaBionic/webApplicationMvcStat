@{



    var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();
    string layout = "";
    if (controller.ToLower() != "home")
    {
        layout = "~/Views/Shared/_Layout_admin.cshtml";
    }
    else
    {
        layout =  "~/Views/Shared/_Layout.cshtml";
    }
    Layout = layout;
}


